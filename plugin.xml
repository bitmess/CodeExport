<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="codeexport.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="codeexport.Perspective"
            name="RCP Perspective"
            id="CodeExport.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="codeexport.View"
            name="Message"
            id="CodeExport.view">
      </view>
      <view
            allowMultiple="true"
            icon="icons/sample3.gif"
            class="codeexport.NavigationView"
            name="Mailboxes"
            id="CodeExport.navigationView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="CodeExport.category"
            name="Mail">
      </category>
      <command
            description="Opens a mailbox"
            name="Open Mailbox"
            id="CodeExport.open"
            categoryId="CodeExport.category">
      </command>
      <command
            description="Open a message dialog"
            name="Open Message Dialog"
            id="CodeExport.openMessage"
            categoryId="CodeExport.category">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="CodeExport.open"
            sequence="CTRL+SHIFT+O"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="CodeExport.openMessage"
            sequence="CTRL+SHIFT+M"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            sequence="CTRL+SHIFT+Q"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="RCP Product"
            application="CodeExport.application">
         <property
               name="aboutText"
               value="RCP Mail template created by PDE">
         </property>
         <property
               name="windowImages"
               value="icons/sample2.gif">
         </property>
         <property
               name="aboutImage"
               value="product_lg.gif">
         </property>
      </product>
   </extension>

</plugin>
